<div class="container">
  <%= form_with(model: @board, url: boards_path, method: 'post', local: true) do |f| %>
    <div>
      <%= f.label :title, 'Name'%>
    </div>
    <div>
      <%= f.text_field :title%>
    </div>
    <div>
      <%= f.label :content, 'Description'%>
    </div>
    <div>
      <%= f.text_area :content %>
    </div>
    <%= f.submit 'submit' %>
  <% end %>

</div>
