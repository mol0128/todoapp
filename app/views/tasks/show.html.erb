<div class="container">
  <% if @task.eyecatch.attached? %>
    <%= image_tag @task.eyecatch %>
  <% end %>
  <p><%= @task.title %></p>
  <p><%= @task.content %></p>
  <p><%= @task.deadline %></p>
  <p><%= @task.user.display_name %></p>

  <li><%= link_to '編集する', edit_board_task_path(@task.board) %></li>
  <li><%= link_to '削除する', board_task_path(@task.board), data: { method: 'delete', confirm: '本当に削除してもよろしいですか' } %></li>


</div>